{
  "name": "react-swift-form",
  "version": "0.0.0-development",
  "title": "React Swift Form",
  "description": "Yet another React form library, for React and React Native. But with a focus on only performance.",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ugur-eren/react-swift-form"
  },
  "bugs": {
    "url": "https://github.com/ugur-eren/react-swift-form/issues"
  },
  "keywords": [
    "front-end",
    "react",
    "react-native",
    "form"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn clean-build && yarn rollup-build",
    "rollup-build": "rollup -c",
    "clean-build": "rimraf dist",
    "prepack": "yarn build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier -c \"src/**/*.{ts,tsx}\"",
    "lint": "yarn lint:check --fix",
    "lint:check": "eslint \"src/**/*.{ts,tsx}\"",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "yup": ">=0.32.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1",
    "react": "^18.1.0",
    "rollup": "^2.67.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^19.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2",
    "yup": "^0.32.11"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
